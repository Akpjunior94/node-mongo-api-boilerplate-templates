{
  "name": "node-mongo-api-boilerplate-template-ts",
  "version": "1.0.0",
  "description": "@code-collabo node-mongo API boilerplate template - typescript",
  "main": "src/server.[atlas/local].ts",
  "scripts": {
    "dev:auto": "node node-mongo.mjs",
    "dev:local": "ts-node-dev --respawn --transpile-only src/server.local.ts",
    "dev:atlas": "ts-node-dev --respawn --transpile-only src/server.atlas.ts",
    "lint": "esw src --ext .ts --color",
    "lint:watch": "npm run lint -- --watch",
    "dev:restore": "node node-mongo-restore.mjs",
    "change:connection": "node node-mongo.mjs"
  },
  "author": "Obiagba Mary",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "mongoose": "^7.0.5",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/chalk": "^2.2.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.16.1",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "chalk": "^4.1.0",
    "eslint": "^8.39.0",
    "eslint-watch": "^8.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  }
}
